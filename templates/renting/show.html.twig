{% extends 'base.html.twig' %}

{% block title %}Material{% endblock %}

{% block body %}
    <h1>Material</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ material.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ material.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ material.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ material.prix }}</td>
            </tr>
            <tr>
                <th>Availability</th>
                <td>{{ material.availability ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('renting') }}">back to list</a>


{% endblock %}
