<script>
 let chart = document.querySelector("#myChart")
 let chartGraft = new Chart(chart,{
     type: "pie",
     data:{
         labels: ["women", "Men"],
         datasets: [{
             label: "repartition par sexe",
             data: ['{{ userMen }}', '{{ userWomen }}'],
             backgroundColor:["red","bleu"]
         }]
     }
 })
