{% extends 'admin/base.html.twig' %}

{% block title %}Subject{% endblock %}

{% block body %}
    <h1>Subject</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ subject.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ subject.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ subject.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ subject.createdAt ? subject.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ subject.category }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('forum_management') }}">back to list</a>


