{% extends 'admin/base.html.twig' %}

{% block title %}Materiel{% endblock %}

{% block body %}
    <h1>Materiel</h1>


    <table class="table">

        <a href="{{ path('materiel_management_new') }}"> Create New </a>
        <a href="{{ path('listo') }}"> Create PDF</a>
        <form method="post" action="{{ path('rechercheback') }}">
            <label>
                <input type="text" name="recherche">
            </label> <input type="submit" value="rechercher">
        </form>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Image</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for materiel in materiels %}
            <tr>
                <td>{{ materiel.id }}</td>
                <td>{{ materiel.Nom }}</td>
                <td>{{ materiel.Prix }}</td>
                <td><img src="{{ asset('picture/' ~ materiel.photo) }}" alt="" width="130" height="130"></td>
                <td>{{ materiel.description }}</td>


                <td>
                    <a href="{{ path('materiel_management_show', {'id': materiel.id}) }}"> Show </a>

                    <a href="{{ path('materiel_management_edit', {'id': materiel.id}) }}"> Edit </a>

                    <a href="{{ path('materiel_management_delete', {'id': materiel.id}) }}"> Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
