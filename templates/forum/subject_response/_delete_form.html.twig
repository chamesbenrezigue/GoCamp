<form method="post" action="{{ path('subject_response_delete', {'id': subject_response.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ subject_response.id) }}">
    <button class="btn btn-warning">Delete</button>
</form>
